{
  "swagger": "2.0",
  "info": {
    "title": "Person CRUD API",
    "description": "Simple CRUD operations Person model",
    "version": "1.0.0"
  },
  "host": "localhost:52773",
  "basePath": "/dc/musketeers/irisOasTestGenDemo/personApi",
  "schemes": [
    "http"
  ],
  "definitions": {
    "Person": {
      "type": "object",
      "description": "The Person model reflecting the dc.Sample.Person class properties.",
      "required": [
        "Name"
      ],
      "properties": {
        "ID": {
          "type": "integer",
          "format": "int64",
          "readOnly": true,
          "description": "The unique ID (OID) for the persistent object, generated by IRIS."
        },
        "Name": {
          "type": "string",
          "description": "The full name of the person."
        },
        "Title": {
          "type": "string",
          "description": "The person's professional title."
        },
        "Company": {
          "type": "string",
          "description": "The company the person works for."
        },
        "Phone": {
          "type": "string",
          "description": "The person's phone number."
        },
        "DOB": {
          "type": "string",
          "format": "date",
          "description": "The date of birth (IRIS Date format, e.g., YYYY-MM-DD)."
        }
      },
      "example": {
        "ID": 1,
        "Name": "John Doe",
        "Title": "Software Engineer",
        "Company": "InterSystems Corp",
        "Phone": "555-1234",
        "DOB": "1980-01-15"
      }
    },
    "Error": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "paths": {
    "/": {
      "post": {
        "tags": [
          "Person"
        ],
        "summary": "Create a new Person record",
        "operationId": "createPerson",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "person",
            "in": "body",
            "description": "Person object to be created",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Person"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Person created successfully",
            "schema": {
              "$ref": "#/definitions/Person"
            },
            "headers": {
              "Location": {
                "description": "The full URI of the newly created Person resource. E.g. /dc/musketeers/irisOasTestGenDemo/personApi/1",
                "type": "string"
              }
            }
          },
          "400": {
            "description": "Invalid input",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "get": {
        "tags": [
          "Person"
        ],
        "summary": "Retrieve a list of all Person records",
        "operationId": "listPeople",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "An array of Person objects",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Person"
              }
            }
          },
          "500": {
            "description": "Server error",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "ID (OID) of the Person to operate on",
          "required": true,
          "type": "integer",
          "format": "int64"
        }
      ],
      "get": {
        "tags": [
          "Person"
        ],
        "summary": "Retrieve a single Person record by ID",
        "operationId": "getPersonById",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "The requested Person object",
            "schema": {
              "$ref": "#/definitions/Person"
            },
            "headers": {
              "ETag": {
                "description": "An identifier for the specific version of the resource, used for conditional retrieval (If-None-Match).",
                "type": "string"
              },
              "Cache-Control": {
                "description": "Directives for caching mechanisms.",
                "type": "string"
              }
            }
          },
          "404": {
            "description": "Person not found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "put": {
        "tags": [
          "Person"
        ],
        "summary": "Update an existing Person record by ID",
        "operationId": "updatePerson",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "person",
            "in": "body",
            "description": "Updated Person object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Person"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Person updated successfully",
            "schema": {
              "$ref": "#/definitions/Person"
            }
          },
          "400": {
            "description": "Invalid input or ID mismatch",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          },
          "404": {
            "description": "Person not found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Person"
        ],
        "summary": "Delete a Person record by ID",
        "operationId": "deletePerson",
        "responses": {
          "204": {
            "description": "Person deleted successfully (No Content)"
          },
          "404": {
            "description": "Person not found",
            "schema": {
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    }
  }
}